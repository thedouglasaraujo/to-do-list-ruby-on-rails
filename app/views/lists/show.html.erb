<h1 style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
  <span><%= %></span>
  <%= render 'actions' %>
</h1>

<!-- Título -->
<h1 style="text-align: center; font-size: 2rem; font-weight: bold;; margin-bottom: 20px;">
  <%= @list.title %>
</h1>

<!-- Descrição -->
<p style="margin: 20px auto; text-align: justify; font-size: 1.2rem; line-height: 1.6; color: #231F20; background-color: #E0E1E0; padding: 15px; border-radius: 10px; max-width: 800px;">
  <%= @list.description.presence || 'Nenhuma descrição disponível para esta lista.' %>
</p>
<hr>

<%= render 'form_item' %>

<hr>

<table class="table table-striped" style="width: 100%; border-spacing: 0 10px;">
  <thead>
    <tr>
      <th style="text-align: left; padding: 10px;">Atividade</th>
      <th style="text-align: center; padding: 10px;">Concluída</th>
      <th style="text-align: center; padding: 10px;">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @list.items.each do |item| %>
      <%= render 'item_row', item: item %>
      <%= render 'modals', item: item %>
    <% end %>
  </tbody>
</table>
